@using FitnessTrackMono.Shared.Models;
@using FitnessTrackMono.Client.Services.WorkoutService;
@inject IWorkoutService WorkoutService;
@* @inject IRoutineService RoutineService; *@

<EditForm Model="r" OnSubmit="HandleSubmit">
    <div>
        <label for="name"> Name </label>
        <InputText id="name" @bind-Value="r.Name" class="form-control"></InputText>
        <label for="dayOfWeek"> Day of Week </label>
        <InputText id="dayOfWeek" @bind-Value="r.DayOfWeek" class="form-control"></InputText>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">@btnText</button>
</EditForm>


@code {
    [Parameter]
    public int? Id { get; set; }

    private string btnText = string.Empty;
    private Workout r = new Workout();

    protected override async Task OnInitializedAsync()
    {
        btnText = Id == null ? "Create" : "Confirm";
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Id == null)
        {
            // Do nothing
        }
        else
        {
            r = await WorkoutService.GetSingleWorkout((int)Id);
        }

    }
    async Task HandleSubmit()
    {
        if (Id == null)
        {
            await WorkoutService.CreateWorkout(r);
        }
        else
        {
            await WorkoutService.UpdateWorkout(r);
        }
    }

    async Task DeleteWorkout()
    {
        await WorkoutService.DeleteWorkout(r.Id);
    }
}
